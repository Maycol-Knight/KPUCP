    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Benefit 1 -->
      <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100">
        <div class="w-14 h-14 bg-gradient-to-r from-kflow-cyan to-kflow-blue rounded-lg flex items-center justify-center mb-6">
